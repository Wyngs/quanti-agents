<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.QuantiAgents">
        <activity
            android:name=".ui.profile.EditProfileActivity"
            android:exported="false" />
        <activity
            android:name=".ui.auth.SignUpActivity"
            android:exported="false" />
        <activity
            android:name=".ui.auth.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".ui.main.MainActivity"
            android:exported="false" />
        <activity
            android:name=".ui.entrantinfo.EntrantInfoHostActivity"
            android:exported="true"
            android:label="EntrantInfoHost (dev)" />
        <activity
            android:name=".ui.auth.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.QuantiAgents.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.admin.AdminDashboardActivity"
            android:exported="false" />

        <activity
            android:name=".ui.admin.ManageEventsActivity"
            android:exported="false"
            android:parentActivityName=".ui.admin.AdminDashboardActivity" />

        <activity
            android:name=".ui.admin.ManageImagesActivity"
            android:exported="false"
            android:parentActivityName=".ui.admin.AdminDashboardActivity" />

        <activity
            android:name=".ui.admin.ManageProfilesActivity"
            android:exported="false"
            android:parentActivityName=".ui.admin.AdminDashboardActivity" />

        <activity
            android:name=".ui.admin.ManageNotificationsActivity"
            android:exported="false"
            android:parentActivityName=".ui.admin.AdminDashboardActivity" />


    </application>

</manifest>
