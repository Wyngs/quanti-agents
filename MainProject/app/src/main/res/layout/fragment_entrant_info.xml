<?xml version="1.0" encoding="utf-8"?>
<!-- Host: action row (N + Draw + Redraw) + TabLayout + ViewPager2 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Action row: super simple inputs/buttons for Part 3 -->
    <!-- Action row -->
    <LinearLayout
        android:id="@+id/actionRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:gravity="end">

        <EditText
            android:id="@+id/inputCount"
            android:layout_width="72dp"
            android:layout_height="48dp"
            android:hint="N"
            android:inputType="number" />

        <Button
            android:id="@+id/btnDraw"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:text="Draw" />

        <Button
            android:id="@+id/btnRedrawCanceled"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:text="Redraw Canceled" />
    </LinearLayout>


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
