<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/my_events_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">

        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/my_events_tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:singleSelection="true"
            app:selectionRequired="true">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/tab_waiting"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:text="@string/tab_waiting_fmt"
                android:textColor="@color/tab_text_selector"
                app:backgroundTint="@color/tab_bg_tint_selector" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/tab_selected"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:text="@string/tab_selected_fmt"
                android:textColor="@color/tab_text_selector"
                app:backgroundTint="@color/tab_bg_tint_selector" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/tab_confirmed"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:text="@string/tab_confirmed_fmt"
                android:textColor="@color/tab_text_selector"
                app:backgroundTint="@color/tab_bg_tint_selector" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/tab_past"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:text="@string/tab_past_fmt"
                android:textColor="@color/tab_text_selector"
                app:backgroundTint="@color/tab_bg_tint_selector" />

        </com.google.android.material.button.MaterialButtonToggleGroup>

        <ProgressBar
            android:id="@+id/my_events_progress"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            android:paddingTop="24dp"
            android:paddingBottom="12dp"/>

        <TextView
            android:id="@+id/my_events_empty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/my_events_empty_generic"
            android:gravity="center_horizontal"
            android:paddingTop="24dp"
            android:visibility="gone"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/my_events_recycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"/>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
