<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:strokeColor="#E0E0E0"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header: Title and Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start|center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/single_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Event Title"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                android:textStyle="bold"
                android:textColor="@color/colorOnSurface"
                android:maxLines="2"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/single_status_chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:background="@drawable/bg_status_pill"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"/>
        </LinearLayout>

        <!-- Description -->
        <TextView
            android:id="@+id/single_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event description..."
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:textColor="#757575"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_marginBottom="20dp"/>

        <!-- Details Grid -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <!-- Row 1: Date & Reg Status -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/single_text_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2025-01-01"
                    android:drawablePadding="8dp"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    app:drawableStartCompat="@drawable/ic_calendar_today"
                    app:drawableTint="#424242"
                    android:textColor="#424242"/>

                <TextView
                    android:id="@+id/single_text_reg_status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Reg Closed"
                    android:drawablePadding="8dp"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    app:drawableStartCompat="@drawable/ic_schedule"
                    app:drawableTint="#424242"
                    android:textColor="#424242"/>
            </LinearLayout>

            <!-- Row 2: Price & Capacity -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/single_text_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="$0.00"
                    android:drawablePadding="8dp"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    app:drawableStartCompat="@drawable/ic_attach_money"
                    app:drawableTint="#424242"
                    android:textColor="#424242"/>

                <TextView
                    android:id="@+id/single_text_capacity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0/0 capacity"
                    android:drawablePadding="8dp"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    app:drawableStartCompat="@drawable/ic_group"
                    app:drawableTint="#424242"
                    android:textColor="#424242"/>
            </LinearLayout>

            <!-- Row 3: Organizer -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/single_text_organizer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Organized by ..."
                    android:drawablePadding="8dp"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    app:drawableStartCompat="@drawable/ic_place"
                    app:drawableTint="#424242"
                    android:textColor="#424242"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:id="@+id/single_actions_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Primary Action (Join/Leave/Accept/Cancel) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/single_action_primary"
                style="@style/Widget.QuantiAgents.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Action"
                android:visibility="gone"
                android:insetTop="0dp"
                android:insetBottom="0dp"/>

            <!-- Secondary Action (Decline) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/single_action_secondary"
                style="@style/Widget.QuantiAgents.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Secondary"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                android:insetTop="0dp"
                android:insetBottom="0dp"/>

            <!-- View Event Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/single_action_view"
                style="@style/Widget.QuantiAgents.Button.Green"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View Ticket"
                android:layout_marginTop="8dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"/>

        </LinearLayout>

        <ProgressBar
            android:id="@+id/single_progress"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"/>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>