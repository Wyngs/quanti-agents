<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_event_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event title"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/text_event_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Status"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/text_waiting_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Waiting list: 0 entrants"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/text_capacity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Capacity: 0 participants"
            android:textSize="14sp" />

        <Button
            android:id="@+id/button_manage_event_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Manage Event Info" />
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
