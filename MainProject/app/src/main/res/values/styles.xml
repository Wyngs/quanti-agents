<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Minimal wrapper theme for FragmentScenario in tests. -->
    <style name="Theme_QATest" parent="Theme.QuantiAgents"/>

    <!-- Primary button -->
    <style name="Widget.QuantiAgents.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">18dp</item>
        <item name="android:paddingRight">18dp</item>
        <item name="android:textAllCaps">false</item>

        <!-- Tint & text color -->
        <item name="backgroundTint">@color/buttonBoxBlue</item>
        <item name="android:textColor">@color/buttonTextBlue</item>

        <!-- Rounded shape -->
        <item name="shapeAppearance">@style/Shape.QuantiAgents.Medium</item>
    </style>

    <!-- Tonal/secondary button -->
    <style name="Widget.QuantiAgents.Button.Tonal" parent="Widget.QuantiAgents.Button">
        <item name="backgroundTint">@color/buttonBoxGrey</item>
        <item name="android:textColor">@color/colorOnSurface</item>
    </style>

    <!-- Red button for destructive actions (cancel, delete) -->
    <style name="Widget.QuantiAgents.Button.Red" parent="Widget.QuantiAgents.Button">
        <item name="backgroundTint">@color/buttonRed</item>
        <item name="android:textColor">@color/buttonTextWhite</item>
    </style>

    <!-- Green button for success actions (view, register, confirm) -->
    <style name="Widget.QuantiAgents.Button.Green" parent="Widget.QuantiAgents.Button">
        <item name="backgroundTint">@color/buttonGreen</item>
    </style>

    <!-- Black button -->
    <style name="Widget.QuantiAgents.Button.Black" parent="Widget.QuantiAgents.Button">
        <item name="backgroundTint">@color/buttonBoxBlack</item>
        <item name="android:textColor">@color/buttonTextWhite</item>
    </style>

    <!-- Outlined TextInputLayout -->
    <style name="Widget.QuantiAgents.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundMode">filled</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxBackgroundColor">@color/fieldLight</item>
        <item name="boxStrokeColor">@color/colorOnSurfaceVariant</item>
        <item name="hintTextColor">@color/colorOnSurfaceVariant</item>
    </style>

    <!-- Card -->
    <style name="Widget.QuantiAgents.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardUseCompatPadding">true</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/buttonBoxBlue</item>
        <item name="shapeAppearance">@style/Shape.QuantiAgents.Medium</item>
    </style>

    <!-- Shapes (MaterialComponents) -->
    <style name="Shape.QuantiAgents.Large" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="Shape.QuantiAgents.Medium" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">18dp</item>
    </style>

</resources>